{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.11.0/.schema/devbox.schema.json",
  "packages": [
    "bash@latest",
    "python@latest",
    "just@latest",
    "jq@latest",
    "pandoc@latest",
    "html-tidy@latest",
    "rsync@latest",
    "yq-go@latest",
    "iconv@latest",
    "go@latest",
    "perl",
    "figlet@latest",
    "nodejs@latest"
  ],
  "env": {
    "DEVBOX_COREPACK_ENABLED": "true"
  },
  "shell": {
    "init_hook": [
      "if [ \"$(type -t \"source\")\" = \"builtin\" ]; then clear -x; fi",
      ". $VENV_DIR/bin/activate",
      "pip install --upgrade pip",
      "pip install markdown-to-json",
      "pip install tabulate PyYAML python-frontmatter",
      "pip install lxml",
      "pip install inflect",
      "pip install mdformat mdformat-wikilink mdformat-tables mdformat-frontmatter mdformat-mkdocs",
      "pip install rapidfuzz",
      "pip install python-slugify",
      "npm install steel-compendium-sdk@latest",
      "go install github.com/pdfcpu/pdfcpu/cmd/pdfcpu@latest",
      "PATH=$PATH:$(go env GOPATH)/bin"
    ],
    "scripts": {
      "gen": "time just gen",
      "gen_heroes": "time just gen_heroes",
      "gen_monsters": "time just gen_monsters",
      "switch_repos_to": "just switch_repos_to $@"
    }
  }
}
